	<div class="loginContainer">
	<div id="loginDiv">
		<h1>Log In</h1>
		<%= form_tag '/login', method: :post do %>
		  <div>
		    <p><%= label_tag :email %></p>
		    <p><%= text_field_tag :email %></p>
		  </div>
		  <div>
		    <p><%= label_tag :password %></p>
		    <p><%= password_field_tag :password %></p>
		  </div>
		  <%= submit_tag "Log In", :class => 'btn' %>
		<% end %>
	</div>
</div>