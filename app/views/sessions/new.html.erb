	<div class="loginContainer">
	<div id="loginDiv">
		<h1>Log In</h1>
		<%= form_tag '/login', method: :post do %>
		  <div>
		    <p><%= label_tag :email %></p>
		    <%= text_field_tag :email %>
		  </div>
		  <div>
		    <p><%= label_tag :password %></p>
		    <%= password_field_tag :password %>
		  </div>
		  <div>
		  <br>
		  	<%= submit_tag "Log In", :class => 'btn btn-primary' %>
		  </div>
		<% end %>
	</div>
</div>