/*___________"New" Page styling___________*/

.newContainer {
	position: fixed;
	top: 0;
	width: 100vw;
	height: 100vh;
	background-image: url("<%= asset_path('new.jpeg') %>");
	background-size: cover;
	overflow: scroll;
}


.newHeadingContainer {
	position: relative;
	top: 60px;
	left: 10%;
	width: 80%;
/*	background-color: steelblue;
*/	padding: 5px;
	/*-ms-transform: skew(-25deg); 
	-webkit-transform: skew(-25deg); 
	transform: skew(-25deg); */
	border-radius: 50px;
}

.newHeading {
	color: white;
	font-size: 48px;
	margin-top: 0;
}

@media(min-width: 768px) {
	.newHeading {
		font-size: 90px;
	}
}

.newFormContainer {
	position: relative;
	top: 8%;
	width: 90%;
	left: 5%;
/*	margin: 0 25%;
*/	padding: 20px;
	border-radius: 25px;
}

@media(min-width: 768px) {
	.newFormContainer {
		width: 60%;
		left: 20%;
	}
}

.newFormContainer h6 {
	color: white;
}

@keyframes enterLeft {
    0%   {left:-1000px;}
    100% {left:0;}
}

.formQuestionDiv {
	position: relative;
	padding: 10px;
	margin-bottom: 10px;
	background-color: rgba(0,0,0,.5);	
	border-radius: 50px;
}

/*@media(min-width: 768px) {
	.formQuestionDiv {
		padding: 10px;
	}
}*/

#formPart1 {
	animation-name: enterLeft;
	animation-duration: 0.7s;
}

#area {
	border-radius: 5px;
}

#formPart2 {
	animation-name: enterLeft;
	animation-duration: 0.9s;
}
#formPart3 {
	animation-name: enterLeft;
	animation-duration: 1.1s;
}
#formPart4 {
	animation-name: enterLeft;
	animation-duration: 1.3s;
}
#formPart5 {
	animation-name: enterLeft;
	animation-duration: 1.5s;
}

.placeType {
	margin: 1px 10px;
}

/*___________________Show Page Styling___________________*/

.showDiv {
	width: 100vw;
	height: 100vh;
	position: fixed;
	top: 0;
	z-index: -10;
	background-image: url("<%= asset_path('show.jpg') %>");
	background-size: cover;
}

.showHeading {
	color: white;
}

.placeDiv {
		width: 750px;
		min-height: 350px;
		margin: 25px auto;
		border: 1px solid #c6c6c6;
		box-shadow: 10px 10px 8px #000;
		padding: 15px 0;
		display: block;
		background: rgba(0,0,0,.5);
		border-radius: 50px;
		color: white;
}

/*.placePhoto {
	position: relative;
	top: 0;
	left: 0;
}*/

@media(max-width: 767px) {
	.placeDiv {
		width: 80%;
		margin: 10px 10%;
	}
}

.placeDiv p {
	font-size: 16px;
}

.placeDiv a {
	color: white;
}

.placeNumberCircle {
	width: 75px;
	height: 75px;
	background-color: #2674c8;
	border-radius: 50%;
	color: white;
	font-size: 50px;
	position: relative;
	display: inline-block;
	margin: 0;
}

.placeHeading {
	border-bottom: 1px solid lightgray;
	margin-bottom: 5px;
	display: inline-block;
}

#saveButton {
	/*position: fixed;
	right: 0;
	top: 45%;
	border-radius: 50px 0 0 50px;
	background-color: rgba(255,0,0,.5);
	height: 80px;*/
	margin-bottom: 15px;
	
}

.mapDiv {
	margin-top: 0;
	padding: 20px 0;
/*	background-color: rgba(255,255,255,0.7);
*/}

@media(min-width: 768px) {
	.mapDiv {
		margin-top: 50px;
	}
}
 
.mapDiv h2 {
	color: white;
}

/*___________________Index Page Styling___________________*/

.indexContainer {
	width: 100vw;
	height: 100vh;
	position: fixed;
	top: 0;
	background-image: url("<%= asset_path('new.jpeg') %>");
	background-size: cover;
	background-position: fixed;
}

.indexContainer h1 {
	position: relative;
	top: 60px;
	color: white;
}

.itinerariesDiv {
	position: relative;
	top: 70px;
	width: 80%;
	max-height: 70%;
	margin: 0 auto;
	background-color: rgba(0,0,0,.5);
	border-radius: 25px;
	animation-name: enterLeft;
	animation-duration: 0.7s;
	overflow: scroll;
}

@media(min-width: 768px) {
	.itinerariesDiv {
		width: 700px;
		max-height: 400px;
	}
}

.itinerariesDiv h5 {
	padding: 15px;
	margin: 0;
}

.itinerariesDiv h5:hover {
	border-radius: 25px;
	background-color: rgba(20,55,155,.7);
}

.itinerariesDiv a {
	color: white;
}