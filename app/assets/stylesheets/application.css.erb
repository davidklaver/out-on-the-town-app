* {
	text-align: center;
	font-family: 'Ubuntu';

}

html, body {
/*   background-color: #003273;
*/	/*background: #0d1858;*/
	/*background: url(traffic.jpg) fixed;
	background-size: cover;*/
	max-width: 100vw;
	overflow-x: hidden;
}


#navbar {
	height: 50px;
	border: none;
	background: rgba(0,0,0,.7);
	position: fixed;
	width: 100vw;
	top: 0;
	z-index: 100;
}

#bs-example-navbar-collapse-1 {
	background: rgba(0,0,0,.7);
}

@media(min-width: 768px) {
	#navbar, #bs-example-navbar-collapse-1 {
		background: transparent;
	}
}

.navbar-collapse {
	position: relative;
	z-index: 150;
}

#navbar a {
	color: white;
	font-size: 18px;
}

.clearNavBarDiv {
	height: 50px;
}

.dropdown-menu {
	background-color: rgba(0,0,0,.8);
	background-clip: initial;
}

@media(max-width: 767px) {
	.nav li:hover {
		background: rgba(0,0,0,.8);
	}
}

.alert {
	position: absolute;
	width: 30%;
	margin: 0 35%;
}

footer {
	width: 100%;
	height: 40px;
	position: absolute;
	bottom: 0;
	z-index: 10;
	border: none;
/*	background-color: #474747;
*/}

footer p {
	position: relative;
	top: 10px;
	color: white;
	font-size: 14px;
	font-family: 'Ubuntu';
}

@media (min-width: 768px) {

		h1 {
			font-size: 60px;
		}

		h2 {
			font-size: 50px;
		}

		h3 {
			font-size: 40px;
		}

		h4 {
			font-size: 32px;
		}

		h5 {
			font-size: 24px;
		}

		h6 {
			font-size: 18px;
		}

		p {
			font-size: 12px;
			margin-bottom: 5px;
		}
}

h5 {
	font-size: 20px;
	color: white;
}

h6 {
	font-size: 16px;
}

/*______________Homepage Styling______________*/

.homeContainer {
	position: relative;
	top: -50px;
	padding-top: 15%;
	z-index: 10;
	max-width: 100vw;
	height: 100vh;
}

@media(max-width: 767px) {
	.homeContainer {
		background-image: url("<%= asset_path('home-bg.png') %>");
		background-size: cover;
		
	}
}

.homeContainer button {
	background: rgba(50,150,255,.8);
	border: 2px solid white;
}

.bgVideo {
	display: none;
	position: absolute;
		top: -6vh;
		left: -5vw;
		width: 105vw;
		overflow-x: hidden;
		/*right: 25vw;*/
/*		height: 120vh; 
*/		/*width: 100vw;*/
		z-index: -10;
		filter: brightness(65%);
}

@media (min-width: 768px) {
	.bgVideo {
		display: initial;
		
	}
}

.screen {
	position: absolute;
	top: 0px;
	left: 0;
	width: 100vw;
	height: 135vh;
	background-color: rgba(0,0,0,0.3);
	z-index: -5;
	overflow: hidden;
}

